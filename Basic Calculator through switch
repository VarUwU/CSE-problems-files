#include<stdio.h>
int main()
{
	float a,b;
	int n;
	printf("Write 2 numbers with a space: \n");
	scanf("%f %f",&a,&b);
	printf("What operation you want to do? \n 1 for addition,\n 2 for subtraction, \n 3 for multiplication and\n 4 for division.\n");
	scanf("%d",&n);
	switch(n)
    {
        case 1:
            printf("%f + %f = %.3f",a, b, a + b);
            break;
        case 2:
            printf("%f - %f = %.3f",a, b, a - b);
            break;
        case 3:
            printf("%f * %f = %.3f",a, b, a * b);
            break;
        case 4:
            printf("%f / %f = %.3f",a, b, a / b);
            break;
            default:
			printf("Wrong choice.Error!");
        }
        return 0;
}
